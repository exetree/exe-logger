{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "lib"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib"
  ]
}
